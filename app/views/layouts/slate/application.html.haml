!!! 5
%html
  %head
    %title Slate
    = stylesheet_link_tag    "slate/application", :media => "all"
    = javascript_include_tag "slate/application"
    = csrf_meta_tags
  %body.slate
    .container
      .page-header
        %h2
          = (@blog.nil?) ? "Your Blog Doesn't Exist Yet" : link_to(@blog.title, :root, :class => "title")
          = (@blog.nil? or cannot? :manage, Slate::Blog) ? "Your Blog Doesn't Exist Yet" : link_to(edit_blog_path(@blog)) do
            %img{ :src => asset_path('slate/icons/gear.png') }
      - if alert
        .alert.alert-error.alert-block
          %a.close{"data-dismiss" => "alert"} ×
          = alert
      - if notice
        .alert.alert-info.alert-block
          %a.close{"data-dismiss" => "alert"} ×
          = notice
      = yield