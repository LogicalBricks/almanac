= form_for @blog, :html => {:class => "well", :multipart => true} do |f|
  = f.hidden_field :retained_logo
  = f.hidden_field :retained_background
  - if @blog.errors.any?
    #error_explanation
      %h5
        = pluralize(@blog.errors.count, "error")
        prohibited this blog from being saved:
      %ul
        - @blog.errors.full_messages.each do |msg|
          %li= msg
  %h4 Blog Details
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :logo
    = f.file_field :logo
    = image_tag @blog.logo.thumb('400x200#').url

  .field
    = f.label :background
    = f.file_field :background
  .actions
    = f.submit :class => "btn btn-primary"